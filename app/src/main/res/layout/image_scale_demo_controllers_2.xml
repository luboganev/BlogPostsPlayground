<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_image_scale_demo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_width_controller_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@+id/cb_width_wrap_content"
            android:text="Container width:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/sb_custom_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_width_wrap_content"
            android:max="300"
            android:progress="200" />

        <CheckBox
            android:id="@id/cb_width_wrap_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_toRightOf="@+id/tv_width_controller_label"
            android:layout_alignParentTop="true"
            android:text="wrap content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_height_controller_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@+id/cb_height_wrap_content"
            android:text="Container height:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/sb_custom_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_height_wrap_content"
            android:max="300"
            android:progress="150" />

        <CheckBox
            android:id="@id/cb_height_wrap_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_toRightOf="@+id/tv_height_controller_label"
            android:layout_alignParentTop="true"
            android:text="wrap content" />

    </RelativeLayout>



</LinearLayout>